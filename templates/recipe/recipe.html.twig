{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <ul class="list-group">
            <li class="list-group-item">
                <div class="row">
                    <div class="col">
                        <img src="{{ asset('uploads/images/recipes/'~recipe.picture) }}" style="width:100%; height:47.923vh">
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col">
                                <h2>{{ recipe.name }} #{{ recipe.id }}</h2>
                                <p>{{ recipe.description }}</p><br>
                                <h3>Ingrédients : </h3>
                                <p>{{ recipe.ingredient }}</p>
                                <h3>Temps de préparation : </h3>
                                <p>{{ recipe.preparationtime }}</p>
                                <h3>Prévu pour : </h3>
                                <p>{{ recipe.nbperson}} personne(s)</p>
                            </div>
                        </div>
                        <div class="row">
                            {% if onHistoryCommands %}
                                <a href="{{ path('orderspage')}}" class="btn btn-outline-dark btn-rounded m-4 mb-5">Vous possédez déjà cette vidéo recette<br>(voir <strong>Historique de vos commandes<strong>)</a>
                            {% elseif onPanier %}
                                <a href="{{ path('panier')}}" class="btn btn-outline-dark btn-rounded m-4 mb-5">Cette vidéo recette se trouve déjà dans votre panier</a>
                            {% else %}
                                <a href="{{ path('panier_add', {'id': recipe.id}) }}" class="btn btn-outline-success btn-rounded m-4 mb-5">Mettre dans son panier cette vidéo recette</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>

{% endblock %}