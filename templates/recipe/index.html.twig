                            <img class="card-img-top" src="uploads/images/recipes/{{ recipe.picture }}" style="width:100%; height:47.923vh">
                            <div class="card-body">
                                <h3>{{ recipe.name }}</h3>
                                <p>{{ recipe.description }}</p>
                                <div class="btn btn-secondary btn-rounded mb-4"><a href="/recettes/{{ recipe.slug }}">Voir cette recette</a></div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="row" id="Desserts">
            <h1 class="mt-3">Les Desserts du moment</h1>
            <div class="card-group">
                {% for recipe in recipesDessert %}
                    <div class="col">
                        <div class="card" style="height:69.22vh">
                            <img class="card-img-top" src="{{ asset('uploads/images/recipes/'~recipe.picture) }}" style="width:100%; height:47.923vh">
                            <div class="card-body">
                                <h3>{{ recipe.name }}</h3>
                                <p>{{ recipe.description }}</p>
                                <div class="btn btn-secondary btn-rounded mb-4"><a href="/recettes/{{ recipe.slug }}">Voir cette recette</a></div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}