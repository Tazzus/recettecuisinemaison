{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h1>Catégorie : {{ categoryName }}</h1>
        <ul class="list-group">
            {% for recipe in recipesByCategory %}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col">
                            <img src="{{ asset('uploads/images/recipes/'~recipe.picture) }}" style="width:100%; height:47.923vh">
                        </div>
                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <h2><a href="/recette/{{ recipe.slug }}">{{ recipe.name }}</a></h2>
                                    <h3>Prévu pour : {{ recipe.nbperson}} personne(s)</h3>
                                    <br>
                                    <p>{{ recipe.description }}</p>
                                </div>
                            </div>
                            <div class="row justify-content-start">
                                <div class="btn btn-secondary btn-rounded m-4 mb-5"><a href="/recettes/{{ recipe.slug }}">Voir la recette</a></div>
                            </div>
                        </div>
                    </div>
                </li><br>
            {% endfor %}
        </ul>
    </div>

{% endblock %}