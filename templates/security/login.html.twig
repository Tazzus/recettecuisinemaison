{% extends 'base.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block body %}
<div class="container justify-center" style="width: 500px;">
<form class="form-signin m-5" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="text-center mb-3">
                Vous êtes connecté en tant que <strong>{{ app.user.name }}</strong><br>
                <a href="{{ path('app_logout') }}" class="btn btn-danger btn-rounded mb-4">Deconnexion</a>
        </div>
    {% else %}

    <h1 class="h3 text-center mb-3 font-weight-normal">Veuillez-vous connecter</h1>

    <div class="form-group">
        <label for="inputEmail">Adresse email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-2" required autofocus>
    </div>

    <div class="form-group">
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control mb-2" required>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button class="btn btn-lg btn-primary btn-block" type="submit">Se connecter</button>
    {% endif %}
</form>
</div>
{% endblock %}
