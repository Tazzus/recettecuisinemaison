<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Recette Cuisine Maison{% endblock %}</title>
        {% block stylesheets %}
            <!-- CSS Bootstrap -->
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
            <!-- CSS thème w3schools -->
            <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Karma">
            <!-- CSS perso -->
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}
    </head>

    <body>
        {% block header %}
        <!-- HOME PAGE by w3schools -->
        <!-- Sidebar (hidden by default) -->
        <nav class="w3-sidebar w3-bar-block w3-card w3-top w3-xlarge w3-animate-left" style="display:none;z-index:2;width:40%;min-width:300px" id="mySidebar">
            <a href="javascript:void(0)" onclick="w3_close()" class="w3-bar-item w3-button">Fermer le Menu</a>
            <a href="?recettes" onclick="w3_close()" class="w3-bar-item w3-button">Les recettes</a>
        </nav>

        <!-- Top menu -->
        <div class="w3-top">
            <div class="w3-white w3-xlarge" style="max-width:1200px;margin:auto">
                <div class="w3-button w3-padding-16 w3-left" onclick="w3_open()">☰</div>
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="w3-right w3-padding-16"><a href="{{ path('app_logout') }}" class="btn btn-danger btn-rounded mb- mr-4">Deconnexion</a></div>
                    <div class="w3-right w3-padding-16"><a href="{{ path('homepage') }}" class="btn btn-outline-primary btn-rounded mb-4 mr-4">Mon panier</a></div>
                    <div class="w3-right w3-padding-16"><a href="{{ path('admin') }}" class="btn btn-outline-primary btn-rounded mb-4 mr-4">Administration</a></div>
                {% elseif is_granted('ROLE_USER') %}
                    <div class="w3-right w3-padding-16"><a href="{{ path('app_logout') }}" class="btn btn-danger btn-rounded mb-4 mr-4">Deconnexion</a></div>
                    <div class="w3-right w3-padding-16"><a href="{{ path('homepage') }}" class="btn btn-outline-primary btn-rounded mb-4 mr-4">Mon panier</a></div>
                {% else %}
                    <div class="w3-right w3-padding-16"><a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-rounded mb-4">Connexion</a></div>
                {% endif %}
                <div class="w3-center w3-padding-16"><a href="../../../">Recette Cuisine Maison</a></div>
            </div>
        </div>
        <hr>
        {% endblock %}

        <!-- CONTENT -->
        {% block body %}

        {% endblock %}

        {% block footer %}
            <hr>
            <footer class="text-center">
                <div>
                    <p>Copyright Antoine Plaineau 2021</p>
                </div>
            </footer>
        {% endblock %}

        {% block javascripts %}
            <!-- JS w3schools -->
            <script>
                // Script to open and close sidebar
                function w3_open() {
                    document.getElementById("mySidebar").style.display = "block";
                }

                function w3_close() {
                    document.getElementById("mySidebar").style.display = "none";
                }
            </script>
            <!-- JS Bootstrap -->
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">
            </script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous">
            </script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
            </script>
        {% endblock %}
    </body>
</html>
