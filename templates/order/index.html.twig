{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <h2 class="text-center">Mon Panier</h2>
        {% if items | length <= 0 %}
        <h1 class="text-center m-5">Votre panier est vide</h1>
        {% else %}
        <br>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Recette(s)</th>
                <th scope="col">Prix</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
            <tr>
                <td class="align-middle">{{ item.recette.name }}</td>
                <td class="align-middle">{{ item.recette.price}} €</td>
                <td>
                    <a href="/recettes/{{ item.recette.slug }}" type="button" class="btn btn-outline-secondary mb-1"><i class="fas fa-eye"></i> Revoir la recette</a>
                    <a href="{{ path('panier_remove', {'id' : item.recette.id}) }}" class="btn btn-danger mb-1">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="1" class="text-right">Total : </td>
                <td>{{ total }} €</td>
                <td><a href="{{ path('panier_confirm') }}" type="button" class="btn btn-outline-success mb-1"><i class="fas fa-check"></i> Valider la commande</a></td>
            </tr>
            </tfoot>
        </table>
        {% endif %}
    </div>

{% endblock %}